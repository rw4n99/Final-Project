<%= form_with(model: @visa_document, local: true, multipart: true) do |form| %>
  <!-- Eligibility Confirmation -->
  <div class="govuk-form-group govuk-form-group--line">
    <%= form.label :eligibility, "Are you applying for an Auxiliar visa for a stay exceeding 90 days?", class: "govuk-label" %>
    <%= form.check_box :eligibility, class: "govuk-checkboxes__input" %>
  </div>

  <!-- Document Upload Section -->
  <h3 class="govuk-heading-s">Upload Documents</h3>

  <!-- National Visa Application Form -->
  <div class="govuk-form-group govuk-form-group--line">
    <%= form.label :visa_application_form, "National Visa Application Form", class: "govuk-label" %>
    <%= form.file_field :visa_application_form, class: "govuk-file-upload" %>
    <div class="govuk-checkboxes">
      <%= form.check_box :visa_application_form_legalized, class: "govuk-checkboxes__input" %>
      <%= form.label :visa_application_form_legalized, "Legalized (apostille)", class: "govuk-label" %>
      <%= form.check_box :visa_application_form_translated, class: "govuk-checkboxes__input" %>
      <%= form.label :visa_application_form_translated, "Translated by an apostille", class: "govuk-label" %>
    </div>
  </div>

  <!-- Proof of ID -->
  <div class="govuk-form-group govuk-form-group--line">
    <%= form.label :photograph_id, "Photograph ID (e.g. Passport-style photo)", class: "govuk-label" %>
    <%= form.file_field :photograph_id, class: "govuk-file-upload" %>
  </div>

  <!-- Passport -->
  <div class="govuk-form-group govuk-form-group--line">
    <%= form.label :passport, "Passport", class: "govuk-label" %>
    <%= form.file_field :passport, class: "govuk-file-upload" %>
  </div>

  <!-- Nombramiento -->
  <div class="govuk-form-group govuk-form-group--line">
    <%= form.label :nombramiento, "Nombramiento", class: "govuk-label" %>
    <%= form.file_field :nombramiento, class: "govuk-file-upload" %>
  </div>

  <!-- Health Insurance -->
  <div class="govuk-form-group govuk-form-group--line">
    <%= form.label :health_insurance, "Health Insurance", class: "govuk-label" %>
    <%= form.file_field :health_insurance, class: "govuk-file-upload" %>
  </div>

  <!-- Criminal Record Check -->
  <div class="govuk-form-group govuk-form-group--line">
    <%= form.label :criminal_record, "Criminal Record Check", class: "govuk-label" %>
    <%= form.file_field :criminal_record, class: "govuk-file-upload" %>
  </div>

  <!-- Medical Certificate -->
  <div class="govuk-form-group govuk-form-group--line">
    <%= form.label :medical_certificate, "Medical Certificate", class: "govuk-label" %>
    <%= form.file_field :medical_certificate, class: "govuk-file-upload" %>
  </div>

  <!-- Visa application payment -->
  <div class="govuk-form-group govuk-form-group--line">
    <%= form.label :visa_application_payment, "Visa application payment", class: "govuk-label" %>
    <%= form.file_field :visa_application_payment, class: "govuk-file-upload" %>
  </div>

  <!-- Submit Button -->
  <div class="govuk-form-group">
    <%= form.submit "Submit", class: "govuk-button" %>
  </div>
<% end %>